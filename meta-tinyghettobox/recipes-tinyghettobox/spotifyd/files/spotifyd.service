[Unit]
Description=A spotify playing daemon
Documentation=https://github.com/Spotifyd/spotifyd
Wants=sound.target
Wants=network-online.target
After=tgb.user-interface.service

[Service]
ExecStartPre=/bin/sleep 5
ExecStart=/srv/tinyghettobox/spotifyd --no-daemon --config-path /etc/spotifyd/spotifyd.conf
Restart=always
RestartSec=12

[Install]
WantedBy=multi-user.target