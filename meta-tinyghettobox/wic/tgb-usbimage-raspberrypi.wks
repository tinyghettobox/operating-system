# Boot partition
part /boot --source bootimg-partition --ondisk sda --fstype=vfat --label boot --active --align 4096 --size 32M

# Root partition using squashfs
part / --source rootfs --fstype=squashfs --align 4096 --ondisk sda
part --size 1M --align 4096 --ondisk sda

# Optional: Add an extra partition for user data if needed
part --fstype=ext4 --label userdata --align 4096 --size 128M --ondisk sda
